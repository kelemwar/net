@using System.Data;
@using CsvDB.Models


@{
    ViewBag.Title = "Home Page";
}

@using (Html.BeginForm("Index", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <h3>Import </h3>
    <div class="row">
        <div class="col-lg-6">
            <table class="table">
                <tr>
                    <td>


                        <input type="file" accept=".csv" name="upload" />
                        <br>
                        <input type="submit" value="Загрузить" />
                        

                    </td>
                </tr>

            </table>

        </div>


        <div class="col-lg-6">
            <table class="table table-striped">

                @if (ViewBag.Header != null)
                {
                    <tr>
                        <td>
                            <h4>Оригинал</h4>
                        </td>
                        <td>
                            <h4>Страндарт</h4>
                        </td>
                    </tr>
                    foreach (var head in ViewBag.Header)
                    {
                        <tr>
                            <td>
                                @head
                            </td>
                            <td>
                                <div class="col-md-3">
                                    <select class="dropdown-toggle" id="mapSelect" name="mapSelect">
                                        <option value="NoMapped" selected="NoMapped">NoMapped</option>
                                        <option value="SKU">SKU</option>
                                        <option value="Brand">Brand</option>
                                        <option value="Price">Price</option>
                                        <option value="Weight">Weight</option>
                                        <option value="Feature">Feature</option>
                                        <option value="Product parameter">Product parameter</option>
                                        <option value="Ignore">Ignore</option>
                                    </select>
                                </div>
                            </td>

                        </tr>
                    }

                    <input id="Submit1" type="submit" value="submit" />
                }

            </table>

        </div>
    </div>
}

